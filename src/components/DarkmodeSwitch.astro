<html lang="en">
  <head>
    <style>
      .cursor-shadow:hover {
        box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
      }
    </style>
  </head>
  <body>
    <div
      class="fixed bottom-0 right-0 m-[2rem] p-3 cursor-pointer bg-white dark:bg-black rounded-full cursor-shadow"
      id="darkmode-toggle"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-7 h-7 hover:scale-110"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"
        ></path>
      </svg>
    </div>
    <script defer>
      const updateTheme = () => {
        if (!("theme" in localStorage)) {
          document.documentElement.classList.add("dark");
          localStorage.theme = "dark";

          return;
        }

        if (localStorage.theme === "light") {
          document.documentElement.classList.add("dark");
          localStorage.theme = "dark";

          return;
        }

        document.documentElement.classList.remove("dark");
        localStorage.theme = "light";
      };
      const button = document.getElementById("darkmode-toggle");
      button?.addEventListener("click", updateTheme);
    </script>
  </body>
</html>
